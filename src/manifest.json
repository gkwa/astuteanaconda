{
  "manifest_version": 3,
  "name": "AstuteAnaconda Product Extractor",
  "version": "1.0.0",
  "description": "Extract products from web pages using SocialSparrow API",
  "permissions": ["activeTab", "scripting", "tabs", "alarms", "background"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["socialsparrow.bundle.js", "content.bundle.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["socialsparrow.bundle.js", "*.map", "*.js.map"],
      "matches": ["<all_urls>"]
    }
  ]
}
